{
  "name": "chessc-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "serve -l 4173 .",
    "build:wasm": "node scripts/build-wasm.mjs",
    "watch:wasm": "chokidar \"src/**/*.c\" -c \"node scripts/build-wasm.mjs\"",
    "build": "npm run build:wasm",
    "pretest": "npm run build:wasm",
    "test": "node --test tests/**/*.test.mjs",
    "web:dev": "npm run dev --workspace apps/web",
    "web:build": "npm run build --workspace apps/web",
    "web:test": "npm run test --workspace apps/web"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "serve": "^14.2.4"
  }
}
